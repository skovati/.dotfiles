#format-prefix = "U+1F3B5 "
format = <label>
exec = python /home/skovati/code/scripts/spotify.sh -f '{artist}: {song}' -t 40
#format-underline = ${colors.color5}

[module/vpn]
type = custom/script
exec = nordvpn status | grep Status | cut -f 2 -d " " | cut -c 1
interval = 1
label = "VPN: %output% "
#format-underline = ${colors.color8}

[module/ip]
type = custom/script
exec = curl -s ifconfig.io
interval = 1
label = "ip: %output%"
#format-underline = ${colors.color8}

[module/powermenu]
type = custom/menu

