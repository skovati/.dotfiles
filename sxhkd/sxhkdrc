#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty
super + shift + Return
	st -e tmux

# program launcher
super + d
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + r
	bspc wm -r

super + shift + q
    bspc quit

# close and kill
super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# swap the current node and the biggest node
super + space
	bspc node -s biggest

#
# state/flags
#


# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}


# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#


super + w
    firefox

super + m
    st -e spt 

super + n
    st -e newsboat

super + r
    st -e ranger

#
# move/resize
#
super + shift + space
    bspc node -t {tiled,floating}

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + greater
    pactl set-sink-volume @DEFAULT_SINK@ +5%
super + less
    pactl set-sink-volume @DEFAULT_SINK@ -5%
super + ctrl + shift + l
    i3lock -i ~/documents/pictures/pape7.png
super + shift + b
    {polybar-msg cmd hide; bspc config top_padding 35; bspc config top_monocle_padding -35,\
    polybar-msg cmd show; bspc config top_padding 65; bspc config top_monocle_padding -65}
